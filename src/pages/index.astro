---
import BaseLayout from "../layouts/BaseLayout.astro";
import Splash from "../pages/Splash.astro";
import "/src/styles/start.css";
---

<BaseLayout currentPage="home">
    <Splash />
    <main class="container-fluid p-0">
        <section class="hero position-relative d-flex align-items-center min-vh-100 overflow-hidden">
            <div class="container position-relative">
                <div class="row align-items-center">
                    <!-- Texto Hero -->
                    <div class="col-md-6 text-md-start text-center position-relative">
                        <div class="mb-3 p-2 rounded-pill info-custom"> 
                            <i class='bx bxl-sketch'></i> Full-Stack Developer Portfolio
                        </div>
                        <h1 class="fw-bold display-4 mt-3 mb-4">
                            Brindando <span class="gradient">la mejor</span> Experiencia de <span class="gradient">Proyectos</span>
                        </h1>
                        <p class="lead mb-4">
                            Apasionado por el Machine Learning, desarrollo de software y an√°lisis de datos,
                            con inter√©s en el desarrollo web accesible y responsivo.
                        </p>
                        <div class="text-center mt-3">
                            <a href="contact.html" class="btn btn-outline-light btn-lg button-custom">
                                <i class='bx bx-send'></i> Contact Me
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <!-- Video Hero a la derecha -->
            <div class="hero-vid-box d-none d-md-block">
                <video autoplay loop muted playsinline></video>
            </div>
        </section>
        <!-- Scroll Down -->
        <div class="position-absolute bottom-0 start-50 translate-middle-x mb-5 scroll-down d-none d-md-block" data-target="skills"></div>
        <!-- Secci√≥n habilidades -->
